<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunzid"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_history_24"
            android:drawablePadding="8dp"
            android:text="@string/Record"
            android:textColor="@color/colorRed"
            android:textSize="20sp" />

    <View
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_gravity="bottom" />



    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="70dp"
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <android.widget.Button
        android:id="@+id/ADD_ADDButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's add a record"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:background="@drawable/button4"
        android:backgroundTint="@color/sunzid"
        android:layout_marginTop="8dp"
        android:layout_marginRight="500dp"
        android:layout_marginLeft="270dp">
    </android.widget.Button>
</RelativeLayout>